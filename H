  <!-- Auction Script -->
  <script>
    // Countdown Timer (24h reset)
    function updateCountdown() {
      const now = new Date();
      const end = new Date();
      end.setHours(23, 59, 59, 999);
      if (now > end) {
        end.setDate(end.getDate() + 1);
      }
      const diff = end - now;
      const hours = String(Math.floor(diff / (1000 * 60 * 60))).padStart(2, '0');
      const minutes = String(Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60))).padStart(2, '0');
      const seconds = String(Math.floor((diff % (1000 * 60)) / 1000)).padStart(2, '0');
      document.getElementById('countdown').textContent = `Auction ends in: ${hours}:${minutes}:${seconds}`;
    }
    setInterval(updateCountdown, 1000);
    updateCountdown();

    // Simple Bid Functionality (for demo)
    let bidCount = 1;
    function placeBid() {
      const bidAmount = (Math.random() * 100 + 1).toFixed(2);
      const bidDiv = document.getElementById('bids');
      const p = document.createElement('p');
      p.textContent = `#${bidCount++}: $${bidAmount} placed by User${Math.floor(Math.random()*1000)}`;
      bidDiv.appendChild(p);
      bidDiv.scrollTop = bidDiv.scrollHeight;
    }
  </script>
